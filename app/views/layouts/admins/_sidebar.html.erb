<div class="container-fluid">
  <div class="row flex-nowrap position-sticky">
    <div class="col-3 col-sm-3 col-lg-3 col-xl-3 col-xxl-3 bg-dark ">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-5 pt-2 text-light min-vh-100" style="font-family: Arial,SansSerif,SansSerif">
        <ul class="list-unstyled ps-0 text-light">
          <li class="mb-1">
            <button class="btn btn-outline-light btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
              Homepage
            </button>
            <hr>
          </li>
          <li class="mb-2">
            <button class="btn btn-toggle btn-dark align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
              Member Management
            </button>
            <div class="collapse" id="dashboard-collapse">
              <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                <li><%= link_to "User List", admins_users_path %></li>
                <li><%= link_to "Item List", admins_items_path %></li>
                <li><%= link_to "Category List", admins_categories_path %></li>
                <li><%= link_to "Bet List", admins_bets_path %></li>
                <li><%= link_to "Winner List", admins_winners_path %></li>
                <li><%= link_to "Offer List", admins_offers_path %></li>
                <li><%= link_to "Order List", admins_orders_path %></li>
                <li><%= link_to "Invite List", admins_invites_path %></li>
              </ul>
            </div>
          </li>
          <li class="mb-1">
            <button class="btn btn-toggle btn-dark align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#orders-collapse" aria-expanded="false">
              Example 2 Management
            </button>
            <div class="collapse" id="orders-collapse">
              <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                <li><a href="#" class=" rounded">Example 1</a></li>
                <li><a href="#" class=" rounded">Example 2</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-9 col-sm-9 col-lg-9 col-xl-9 col-xxl-9 bg-white ">
      <div class="text-center m-2">
        <span class="badge alert alert-primary mx-1"><%= notice %><%= alert %></span>
      </div>
      <%= yield %>
    </div>
  </div>
</div>


