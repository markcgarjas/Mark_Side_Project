<%= render 'layouts/admins/error_message', resource: @bet %>
<h1 class="text-center">Add Item</h1>
<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <%= form_with model: @bet, url: admins_bets_path do |f| %>
              <%= f.label :user_id, class: 'form-label' %>
              <%= f.text_field :user_id, class: 'form-control' %>
              <%= f.label :item_id, class: 'form-label' %>
              <%= f.text_field :item_id, class: 'form-control' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>