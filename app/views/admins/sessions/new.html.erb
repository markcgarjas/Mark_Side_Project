<section class="bg-secondary">
  <div class="container mt-lg-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10 col-md-8 col-lg-6 col-xl-6">
        <div class="card shadow-2-strong border-0">
          <div class="card-body m-0 text-center">
            <div class="card shadow-lg rounded-3">
              <div class="card-body bg-light">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <h1 class="h3 mb-3 fw-normal">Login</h1>
                  <div class="form-floating mt-3">
                    <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
                    <br/>
                    <%= f.label :email, for: "floatingInput" %>
                  </div>
                  <div class="form-floating">
                    <%= f.password_field :password, class: "form-control", id: "floatingInput", placeholder: "Password" %>
                    <br/>
                    <%= f.label :password, for: "floatingInput" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="checkbox mb-3">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                  <div class="actions">
                    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
