<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-11 col-md-10 col-lg-9 col-xl-8 col-xxl-7">
        <div class="card-header">
          <h1 class="text-center border bg-warning p-2">Category List</h1>
        </div>
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <%= link_to 'New Category', new_admins_category_path, class: 'btn btn-warning mx-2' %><%= link_to "Back", new_admins_item_path, class: 'btn btn-dark' %>
            <hr>
            <% @categories.each do |category| %>
              <p class="text-center">
                <span class="bi bi-hash"></span><%= category.sort %>
                <%= category.name %>
              </p>
              <div class="d-flex justify-content-center align-content-center">
                <%= link_to "Edit", edit_admins_category_path(category), class: 'btn btn-warning mx-2' %> <%= button_to "Delete", admins_category_path(category), { onclick: "return confirm('Are you sure you want to delete?')", method: :delete, class: "btn btn-dark" } %>
              </div>
              <hr>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
