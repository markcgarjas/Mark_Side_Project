<%= form_with model: item, url: path do |f| %>
  <div>
    <%= f.submit class: 'btn btn-warning' %>
    <%= link_to 'Back', admins_items_path, class: 'btn btn-dark' %>
  </div>
  <hr>
  <div class="form-check-outline border">
    <%= f.label :categories, class: 'fs-5'%><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, class: 'form-check-input', for: 'defaultCheck1' %>
  </div>
  <hr>
  <div class="form">
    <%= f.label :image, class: 'form-label' %><br>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="form">
    <%= f.label :name, class: 'form-label' %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>
  <div class="form">
    <%= f.label :quantity, class: 'form-label' %><br>
    <%= f.number_field :quantity, class: 'form-control', placeholder: 'Quantity' %>
  </div>
  <div class="form">
    <%= f.label :minimum_bets, class: 'form-label' %><br>
    <%= f.number_field :minimum_bets, class: 'form-control', placeholder: 'Minimum Bets' %>
  </div>
  <div class="form">
    <%= f.label :online_at, class: 'form-label' %><br>
    <%= f.date_field :online_at, class: 'form-control', placeholder: 'Minimum Bets' %>
  </div>
  <div class="form">
    <%= f.label :offline_at, class: 'form-label' %><br>
    <%= f.date_field :offline_at, class: 'form-control', placeholder: 'Minimum Bets' %>
  </div>
  <div class="form">
    <%= f.label :start_at, class: 'form-label' %><br>
    <%= f.date_field :start_at, class: 'form-control', placeholder: 'Minimum Bets' %>
  </div>
  <div class="form">
    <%= f.label :status, class: 'form-label' %><br>
    <%= f.select :status, options_for_select(Item.statuses.map { |key, value| [key.humanize, key] }), { prompt: "Select Status" }, class: 'form-control mt-1 mb-1' %>
  </div>
<% end %>
