<h1 class="text-center"><%= @item.name %></h1>
<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <p><%= image_tag "#{@item.image.url}", width: "200", height: "200" %></p>
            <p>Name:<%= @item.name %></p>
            <p>Quantity:<%= @item.quantity %></p>
            <p>Minimum Bets:<%= @item.minimum_bets %></p>
            <p>State:<%= @item.state %></p>
            <p>Batch:<%= @item.batch_count %></p>
            <p>Online At:<%= @item.online_at %></p>
            <p>Offline At:<%= @item.offline_at %></p>
            <p>Start At:<%= @item.start_at %></p>
            <p>Status:<%= @item.status %></p>
            <%= link_to 'Back', admins_items_path, class: 'btn btn-dark' %>
            <%= link_to 'Edit', edit_admins_item_path, class: 'btn btn-dark' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>