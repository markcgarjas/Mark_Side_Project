<h1 class="text-center text-white">Invite Others</h1>
<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-auto">
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <%= @svg.html_safe %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="d-flex justify-content-center align-content-center">
      <div class="col-auto">
        <div class="card">
          <div class="card-body">
            <div class="justify-content-center align-content-center">
              <div class="card">
                <div class="card-body">
                  <span><%= @url %></span>
                </div>
              </div>
              <div class="card mt-1">
                <div class="card-body text-center">
                  <p><%= "You have #{@invited_members} invite/s" %></p>
                  <% unless @next_level.nil? %>
                    <p><%= "Share to #{@member_needs} friends" %><br>
                      and get<br><%= "#{@coins} coin/s" %></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/users/footer_invite' %>