<section class="mb-3">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <%= render "layouts/users/banner" %>
        <%= render "layouts/users/news_ticker" %>
        <% @winners.each do |winner| %>
          <div class="mt-3">
            <div class="card" style="border-radius: 0;">
              <div class="card-body">
                <div class="row d-flex">
                  <div class="col-5">
                    <%= image_tag "#{winner.picture.url}", height: "200", class: 'mx-auto d-block w-100' %>
                  </div>
                  <div class="col-1">
                  </div>
                  <div class="col-6">
                    <div class="mt-4 pt-3">
                      <b>Username: </b>
                      <p class="text-warning"><%= winner.user.username %></p>
                      <b><%= t("share_comments") %>: </b>
                      <p class="text-warning"><%= winner.comment %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>