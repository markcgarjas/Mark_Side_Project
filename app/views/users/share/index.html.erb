<section>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <%= render "layouts/users/banner" %>
        <%= render "layouts/users/news_ticker" %>
        <div class="mt-3">
          <div class="row d-flex">
            <% @winners.each do |winner| %>
              <div class="col-6">
                <div class="card mb-2">
                  <div class="card-body">
                    <div class="container">
                      <%= image_tag "#{winner.picture.url}", height: "270", class: 'mx-auto d-block w-100' %>
                    </div>
                  </div>
                </div>
                <hr>
              </div>
              <div class="col-6">
                <div class="mt-4 p-5">
                  <div class="card mt-6 bg-white">
                    <div class="container">
                      <div class="card-body">
                        <b>Username: </b>
                        <p class="text-warning"><%= winner.user.username %></p>
                        <b>Share comments: </b>
                        <p class="text-warning"><%= winner.comment %></p>
                      </div>
                    </div>
                  </div>
                  <hr>
                </div>
              </div>
            <% end %>
            <div class="mt-5 text-light">.</div>
            <div class="mt-5 text-light">.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
<%= render 'layouts/users/footer_share' %>