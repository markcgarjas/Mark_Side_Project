<section>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <%= render "layouts/users/banner" %>
        <%= render "layouts/users/news_ticker" %>
          <div class="mt-2">
            <%= link_to "All", users_lottery_index_path, class: "btn btn-dark btn-outline-light rounded rounded-5" %>
            <% @categories.each do |category| %>
              <%= link_to category.name, users_lottery_index_path(category: category.name), class: 'btn btn-dark btn-outline-warning' if category.name == params[:category] %>
              <%= link_to category.name, users_lottery_index_path(category: category.name), class: 'btn btn-white btn-outline-light' unless category.name == params[:category] %>
            <% end %>
          </div>
          <div class="mt-3">
            <div class="row d-flex">
              <% @items.each do |item| %>
                <div class="col-6">
                  <div class="card mb-2">
                    <div class="card-body">
                      <div class="container">
                        <%= link_to (image_tag item.image.url, height: "270", class: 'mx-auto d-block w-100'), users_lottery_path(item) %>
                        <div class="text-center"><%= item.name %></div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="mb-4 text-end">
            <%= link_to "More...", "#", class: 'text-dark' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/users/footer_lottery' %>