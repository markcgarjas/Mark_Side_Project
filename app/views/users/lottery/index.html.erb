<%= render 'layouts/users/header' %>
<div class="d-flex justify-content-center align-content-center">
  <div class="col-md-12 col-lg-8 col-lg-8 col-xl-11">
    <div class="card">
      <div class="card-body">
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
              <%= image_tag "banner.jpeg", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "hugo.png", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "mar.png", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "den.jpeg", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "mj.png", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "erwin.png", width: "1200", height: "250", alt: "koda" %>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <%= image_tag "bryn.png", width: "1200", height: "250", alt: "koda" %>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
    <div>
      <div class="mt-2 bg-light rounded rounded-1" style="font-family: 'Arial Rounded MT Bold'">
        <marquee width="80%" direction="left" scrollamount="12" height="20px">
          Announcement!
        </marquee>
      </div>
      <div class="rounded-1 mt-2 mb-1">
        <ul class="nav nav-pills nav-justified">
          <li class="nav-item">
            <%= link_to "Button", '#', class: "nav-link active" %>
          </li>
        </ul>
      </div>
      <div class="mt-2">
        <%= link_to "All", users_lottery_index_path, class: "btn btn-primary rounded rounded-5" %>
        <% @categories.each do |category| %>
          <%= link_to category.name, users_lottery_index_path(category: category.name), class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="mt-3">
        <div class="row d-flex">
          <% @items.each do |item| %>
            <div class="col-6">
              <div class="card mb-2">
                <div class="card-body">
                  <div class="container">
                    <%= image_tag item.image.url, width: "480", height: "200" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mb-4 text-end">
        <%= link_to "More...", "#", class: 'text-dark' %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/users/footer_lottery' %>