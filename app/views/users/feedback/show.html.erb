<h1 class="text-center text-white">Feedback in<%= @winner.item.name %></h1>
<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-11 col-lg-10 col-xl-9 col-xxl-8">
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <span class="text-danger">Serial Number: </span><span><%= @winner.bet.serial_number %></span><br>
            <span class="text-danger">Created at: </span><%= @winner.created_at %>
            <hr>
            <h2 class="text-center">Feedback</h2>
            <hr>
            <div class="text-center">
              <%= form_with model: @winner, url: users_feedback_path, method: :patch do |form| %>
                <%= form.label :add_comments, class: 'form-label' %>
                <%= form.text_area :comment, { class: 'form-control', :rows => "5", :cols => "20" } %>
                <%= form.label "Upload Picture", class: 'form-label' %>
                <%= form.file_field :picture, class: 'form-control' %>
                <%= form.submit "Add Feedback", class: 'btn btn-dark mt-2' %>
              <% end %>
            </div>
            <hr>
            <% if @addresses.blank? %>
              <h3 class="text-center">No Address Found</h3>
              <%= link_to 'Add Address', users_profile_addresses_path, class: 'btn btn-dark' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/users/footer_profile' %>