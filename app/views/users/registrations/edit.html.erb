<%= render 'layouts/header' %>
<div class="container vh-100 vw-100">
  <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }, data: { turbo: false }) do |f| %>
    <%= render "users/shared/error_messages", resource: @user %>
    <div class="d-flex justify-content-center align-content-lg-center">
      <div class="col-10 col-md-8 col-lg-6 col-xl-6">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center">Edit Profile</h1>
            <div class="form-group d-flex justify-content-center align-content-center mb-2">
              <div class="m-2 text-center"><strong><%= f.label "add/Update Profile Picture", class: 'mb-3' %></strong>
                <%= f.file_field :image, class: 'form form-control' %>
              </div>
            </div>

            <div class="form-floating mt-3">
              <%= f.text_field :username, class: "form-control", id: "floatingInput", placeholder: "Username" %>
              <br/>
              <%= f.label :username, for: "floatingInput" %>
            </div>

            <div class="form-floating mt-3">
              <%= f.text_field :phone, class: "form-control", id: "floatingInput", placeholder: "+639....", maxlength: 13 %>
              <br/>
              <%= f.label :phone, for: "floatingInput" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="d-flex justify-content-center align-content-lg-center">
      <div class="col-10 col-md-8 col-lg-6 col-xl-6">
        <div class="card">
          <div class="card-body">
            <h4 class="text-center">Do you want to change your password?</h4>
            <div class="form-floating mt-3">
              <%= f.password_field :current_password, id: "floatingInput", class: 'form-control', placeholder: 'Current Password' %>
              <br/>
              <%= f.label "Current_password (We need your current password to confirm your changes)", for: "floatingInput" %>
            </div>
            <div class="form-floating mt-3">
              <%= f.password_field :password, class: 'form-control', id: "floatingInput", placeholder: "New Password" %>
              <br>
              <%= f.label "New Password (Minimum of 6 characters minimum}" %>
            </div>
            <div class="form-floating mt-3">
              <%= f.password_field :password_confirmation, class: 'form-control', id: "floatingInput", placeholder: "Password Confirmation" %>
              <%= f.label "New Password Confirmation" %><br/>
            </div>
          </div>
        </div>
        <div class="text-center mt-3">
          <%= f.submit class: 'btn btn-primary btn-lg mx-3' %><%= link_to "Back", me_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render "layouts/footer" %>




















