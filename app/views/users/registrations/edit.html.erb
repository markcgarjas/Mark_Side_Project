<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5 mb-3">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-11 col-md-10 col-lg-9 col-xl-8 col-xxl-7">
        <div class="card-header">
          <h1 class="text-center border bg-warning p-2">Edit Profile</h1>
        </div>
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <%= form_for(resource, as: resource_name, url: user_registration_path, data: { turbo: false }) do |f| %>
              <div class="row d-flex justify-content-center align-content-center">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6 border">
                  <div class="form-floating text-center">
                    <strong><%= f.label "add/Update Profile Picture", class: 'mb-3' %>
                      <%= f.file_field :image, class: 'form-control' %></strong>
                  </div>
                  <div class="form-floating mt-3">
                    <%= f.text_field :username, class: "form-control", id: "floatingInput", placeholder: "Username" %>
                    <br/>
                    <%= f.label :username, for: "floatingInput" %>
                  </div>
                  <div class="form-floating mt-3">
                    <%= f.text_field :phone, class: "form-control", id: "floatingInput", placeholder: "+639....", maxlength: 13 %>
                    <br/>
                    <%= f.label :phone, for: "floatingInput" %>
                  </div>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6 border">
                  <div class="form-floating text-center">
                    <strong><%= f.label "Change Password?", class: 'mb-3' %></strong>
                    <div class="form-floating">
                      <%= f.password_field :current_password, id: "floatingInput", class: 'form-control', placeholder: 'Current Password' %>
                      <br/>
                      <%= f.label "Current_password (We need your current password to confirm your changes)", for: "floatingInput" %>
                    </div>
                    <div class="form-floating mt-3">
                      <%= f.password_field :password, class: 'form-control', id: "floatingInput", placeholder: "New Password" %>
                      <br>
                      <%= f.label "New Password (Minimum of 6 characters minimum}" %>
                    </div>
                    <div class="form-floating mt-3">
                      <%= f.password_field :password_confirmation, class: 'form-control', id: "floatingInput", placeholder: "Password Confirmation" %>
                      <%= f.label "New Password Confirmation" %><br/>
                    </div>
                  </div>
                </div>
                <div class="text-center mt-3">
                  <%= f.submit class: 'btn btn-warning btn-lg mx-3' %><%= link_to "Back", users_profile_path, class: 'btn btn-dark btn-lg' %>
                </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%= render "layouts/users/footer_profile" %>