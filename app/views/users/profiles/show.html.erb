<%= render 'layouts/users/header' %>
<div class="d-flex justify-content-center align-content-center">
  <div class="col-md-12 col-lg-8 col-lg-8 col-xl-11">
    <div class="card">
      <div class="card-body">
        <p class="text-center">
          <%= image_tag "#{current_user.image.url}", width: "100", height: "100" if current_user.image? %>
        </p>
        <p>Username: <%= current_user.username %></p>
        <p>Email: <%= current_user.email %></p>
        <p>Coins: <%= current_user.coins %></p>
        <div class="container col-8">
          <ul class="nav nav-pills nav-justified">
            <li class="nav-item">
              <%= link_to "Cash in", "#", class: "btn text-white bg-dark nav-link" %>
            </li>
          </ul>
          <ul class="nav nav-pills nav-justified mt-3">
            <li class="nav-item">
              <%= link_to "Edit", edit_user_registration_path, class: "btn text-dark  bg-warning nav-link" %>
            </li>&nbsp;&nbsp;&nbsp;
            <li class="nav-item">
              <%= link_to "Address", users_profile_addresses_path, class: "btn text-white bg-primary nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/users/footer' %>